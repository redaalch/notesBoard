{
  "name": "notesboard",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "scripts": {
    "postinstall": "npm ci --prefix backend",
    "heroku-postbuild": "npm ci --include=dev --prefix frontend && npm run build --prefix frontend",
    "start": "npm run start --prefix backend",
    "dev:api": "npm run dev --prefix backend",
    "dev:web": "npm run dev --prefix frontend",
    "dev": "concurrently -k -n api,web -c cyan,magenta \"npm:dev:api\" \"npm:dev:web\"",
    "build": "npm run build --prefix frontend",
    "preview": "npm run preview --prefix frontend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
